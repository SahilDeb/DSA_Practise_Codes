import java.util.ArrayList;
import java.util.List;

public class CombinationSum {
	public static List<Integer> combinationSumUtil(int[] candidates, int target, int start) {
		if (target == 0)
			return new ArrayList<>();
		if (target < 0)
			return null;
		
		List<Integer> res = null;
		for (; start < candidates.length; start++) {
			res = combinationSumUtil(candidates, target - candidates[start], start);
			if (res != null) {
				res.add(candidates[start]);
				break;
			}
		}
		return res;
    }
	public static List<List<Integer>> combinationSum(int[] candidates, int target) {
		List<List<Integer>> res = new ArrayList<List<Integer>>();
        for (int i = 0; i < candidates.length; i++) {
        	res.add(combinationSumUtil(candidates, target, i));        	
        }
        return res;        
    }
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {2, 3, 6, 7};
		combinationSum(arr, 7);
	}

}
