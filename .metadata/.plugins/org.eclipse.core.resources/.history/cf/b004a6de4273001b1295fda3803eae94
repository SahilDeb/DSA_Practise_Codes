import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;

public class CombinationSum {
	static List<List<Integer>> combi;
	public static boolean combinationSumUtil(int[] candidates, int target, List<Integer> res) {
		if (target == 0) {
			combi.add(res);
			return true;
		}
		else if (target < 0)
			return false;
		
		boolean ret = true;
		for (int i = 0; i < candidates.length; i++) {
			res.add(candidates[i]);
			ret = ret && combinationSumUtil(candidates, target - candidates[i], res);
		}
		return ret;
    }
	public static List<List<Integer>> combinationSum(int[] candidates, int target) {
		combi = new ArrayList<List<Integer>>();
		combinationSumUtil(candidates, target, new ArrayList<>());
        return combi;        
    }
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {2, 3, 6, 7};
		System.out.println(combinationSum(arr, 7));
	}

}
